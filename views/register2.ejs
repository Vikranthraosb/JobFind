<% include ./header.ejs %>

 
<div class="main">
    <div class="login-box bg-green-300">
  <h1>Create New Account-register-2</h1>
  <form class="form" action="/register" method="post">
    <input type="text" name="fullname" placeholder="Full name" class=" block w-full px-3 py-2">
    <input type="text" name="username" placeholder="username" class=" block w-full px-3 py-2">
    <input type="password" name="password" placeholder="password" class=" block w-full px-3 py-2">
    <input type="email" name="email" placeholder="email" class=" block w-full px-3 py-2">
    <input type="number" name="Contact" placeholder="Contact" class=" block w-full px-3 py-2">
    <input type="submit" class="block  bg-red-600 px-2 text-white submit">
  </form>
  <a href="/">login to existing account</a>
    </div>
  </div>

  <style>
    .main{
      background-color: rgb(255, 246, 231);
    }
    .login-box {
    border-radius: 3vw;
    background-image: linear-gradient(to right,#ce5900,#ce0000 );
    backdrop-filter: blur(10px); 
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37); 
}
.login-box h1{
  font-size: 2.3vw;
  color: rgb(243, 240, 255);
  margin-bottom: 2vw;
  margin-top: 1.6vw;
}
.login-box a{
  font-size: .9vw;
  color: white;
  margin: auto;
}
.submit{
  background-color: #101010;
  color: white;
  text-transform: uppercase;
  text-align: center;
  border-radius: 10px;
  width: 7.6vw;
  font-weight: bold;
  transform: all ease 3s;
}
.submit:hover{
  cursor: pointer;
  background-color: white;
  color: black;
}
.form{
  display: flex;
  align-items: center;
  justify-content: space-around;
}


  </style>


