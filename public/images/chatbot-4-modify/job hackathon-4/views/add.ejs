<div class="container w-full min-h-screen bg-zinc-800 px-10 py-10 text-white">

    <h1 class="heading text-xl text-white">Create New Post</h1>
    <hr class="mt-3 opacity-12">

    <form class="form" action="/createpost" method="post" enctype="multipart/form-data">
        <!-- Existing fields -->
        <input class="file block w-1/3 px-5 py-.5 border-2 rounded-md m-4" type="file" name="postimage">
        <input class="title block w-1/3 px-4 py-3 border-2 rounded-md m-4" type="text" placeholder="Title" name="title">
        <textarea class="Description w-1/3 px-4 py-3 border-2 rounded-md m-4" type="text" placeholder="Description" name="Description"></textarea>

        <!-- Experience -->
        <select class="experience w-1/3 px-4 py-3 border-2 rounded-md m-4" name="experience">
            <option value="1 year">1 year</option>
            <option value="2 years">2 years</option>
            <option value="3+ years">3+ years</option>
        </select>

        <!-- Skills -->
        <select class="skills w-1/3 px-4 py-3 border-2 rounded-md m-4" name="Skills">
            <option value="C">Full Stack</option>
            <option value="C++">Backend</option>
            <option value="Java">Frontend</option>
            <option value="datascience">DataScience</option>
            <option value="security">Security</option>
            <!-- Add more options as needed -->
        </select>
        <select class="education w-1/3 px-4 py-3 border-2 rounded-md m-4" name="education">
            <option value="Undergrad">Undergrad</option>
            <option value="PostGrad">PostGrad</option>
            <option value="Phd">Phd</option>
    >
            <!-- Add more options as needed -->
        </select>
        <input class="location w-1/3 px-4 py-3 border-2 rounded-md m-4" type="text" placeholder="Location" name="location">
        <select class="language w-1/3 px-4 py-3 border-2 rounded-md m-4" name="language">
            <option value="Undergrad">English</option>
            <option value="PostGrad">Kannada</option>
            <option value="Phd">Hindhi</option>

            <!-- Add more options as needed -->
        </select>
        <!-- Submit button -->
        <input class="submit block w-1/3 px-4 py-.5 border-2 rounded-md m-4 bg-red-800 text-white" type="submit" value="Apply for job">
    </form>

</div>

